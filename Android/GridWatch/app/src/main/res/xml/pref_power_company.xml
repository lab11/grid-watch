<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="power_company_name"
            android:title="@string/pref_title_company_name"
            android:defaultValue="@string/pref_default_company_name"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <EditTextPreference
            android:key="power_company_phone"
            android:title="@string/pref_title_company_phone"
            android:defaultValue="@string/pref_default_display_phone"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <SwitchPreference
        android:key="power_company_update"
        android:title="@string/pref_title_company_auto"
        android:defaultValue="true" />




</PreferenceScreen>
