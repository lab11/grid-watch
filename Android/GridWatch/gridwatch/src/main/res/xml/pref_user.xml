<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
            android:key="home_address_text"
            android:title="@string/pref_title_home_address"
            android:defaultValue="@string/pref_default_home_address"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <EditTextPreference
            android:key="work_address_text"
            android:title="@string/pref_title_work_address"
            android:defaultValue="@string/pref_default_work_address"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <ListPreference
        android:key="gps_list"
        android:title="@string/pref_title_location_services"
        android:defaultValue="-1"
        android:entries="@array/pref_location_titles"
        android:entryValues="@array/pref_location_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
            android:key="id_text"
            android:title="@string/pref_title_id"
            android:defaultValue="@string/pref_default_id"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />



</PreferenceScreen>
